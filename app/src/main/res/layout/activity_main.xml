<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dimuch.mafia_clock.MainActivity">


    <Button
        android:id="@+id/bTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="60"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bReset" />

    <Button
        android:id="@+id/b30sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/thirty_sec"
        app:layout_constraintBottom_toBottomOf="@+id/b60sec"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b60sec"
        app:layout_constraintTop_toTopOf="@+id/b60sec" />

    <Button
        android:id="@+id/b60sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/sixty_sec"
        app:layout_constraintBottom_toBottomOf="@+id/bPause"
        app:layout_constraintLeft_toRightOf="@+id/b30sec"
        app:layout_constraintRight_toLeftOf="@+id/bPause"
        app:layout_constraintTop_toTopOf="@+id/bPause" />

    <Button
        android:id="@+id/bPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/pause"
        app:layout_constraintBottom_toBottomOf="@+id/bReset"
        app:layout_constraintLeft_toRightOf="@+id/b60sec"
        app:layout_constraintRight_toLeftOf="@+id/bReset"
        app:layout_constraintTop_toTopOf="@+id/bReset" />

    <Button
        android:id="@+id/bReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/reset"
        app:layout_constraintLeft_toRightOf="@+id/bPause"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
